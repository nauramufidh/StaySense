<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.AboutFragment">

    <TextView
        android:id="@+id/tv_dua_about_staysense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/about_staysense"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_description_about_staysense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dua_about_staysense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_description_about_staysense"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:backgroundTint="@color/light_grayish_yellow">

            <ImageView
                android:id="@+id/iv_description_about_staysense"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/zstaysense" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_description_about_staysense"
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/description_staysense"
            android:textSize="17sp"
            android:textAlignment="center"
            android:lineSpacingExtra="5dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>